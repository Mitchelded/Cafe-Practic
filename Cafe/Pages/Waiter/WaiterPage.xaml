<Page x:Class="Cafe.Pages.Waiter.WaiterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Cafe.Pages.Waiter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WaiterPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Frame Name="FrameDg" NavigationUIVisibility="Hidden" Margin="10, 25,10,10" Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Grid.Row="1" Margin="10">
            <Button  BorderThickness="0" Content="Add Order" Width="100" x:Name="AddOrder" Click="AddOrder_Click"/>
        </StackPanel>
    </Grid>
</Page>
